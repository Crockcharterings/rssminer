#!/bin/bash

version=1.3.159
rm -f /tmp/h2-${version}.jar
cp /home/feng/.m2/repository/com/h2database/h2/${version}/h2-${version}.jar /tmp

if [ $# != 0 ]
then
    rm -f /tmp/rssminer.trace.sql
    cd /tmp && java -cp /tmp/h2-${version}.jar org.h2.tools.ConvertTraceFile \
        -traceFile /dev/shm/rssminer.trace.db \
        -script /tmp/rssminer.trace.sql
    tail -n 100 /tmp/rssminer.trace.sql |grep "\-\-"
else
    rlwrap java -cp /tmp/h2-${version}.jar org.h2.tools.Shell \
        -url "jdbc:h2:/media/1082B19F82B189AC/rssminer/rssminer;AUTO_SERVER=TRUE;MVCC=true" \
        -user sa -password sa
fi
