#!/bin/bash

set -e

# sudo adduser deploy && copy authen key
# deploy  ALL = NOPASSWD: /bin/cp, /bin/mkdir, /sbin/restart, /bin/readlink, /bin/chown, /sbin/start, /usr/sbin/service, /bin/ln

READLINK=readlink
FRONTEND_HOST="rss-miner.com"
ABSOLUTE_PATH=$(${READLINK} -f $0)
RSSMINER_HOME="${ABSOLUTE_PATH%/*/*}"
DEPLOYMENT_USER="deploy"
SSH_TARGET="${DEPLOYMENT_USER}@${FRONTEND_HOST}"
TARGET_DIR="/var/www/rssminer"

function remote_run {
    ssh "${SSH_TARGET}" "$1"
}
rm -rf classes
lein javac
# Create the directory if this is the first deployment.
remote_run "sudo mkdir -p ${TARGET_DIR} && sudo chown deploy ${TARGET_DIR}"

rsync --rsh='ssh' -vr --delete --delete-excluded \
    --exclude-from deploy/exclude.txt \
    "${RSSMINER_HOME}/" "${SSH_TARGET}:${TARGET_DIR}/"

remote_run "sudo cp ${TARGET_DIR}/deploy/rssminer.conf /etc/init/"
remote_run "sudo cp ${TARGET_DIR}/deploy/rssminer /etc/nginx/sites-available"
remote_run "sudo cp ${TARGET_DIR}/deploy/gzip.conf /etc/nginx/conf.d"
remote_run "cd ${TARGET_DIR} && sudo cp deploy/log4j.xml src"
remote_run "cd /etc/nginx/sites-enabled  && sudo ln -f -s /etc/nginx/sites-available/rssminer"

remote_run "sudo service nginx restart"
remote_run "sudo restart rssminer || sudo start rssminer"
